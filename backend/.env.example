#######################################
# DATABASE
#######################################

DB_HOST=localhost
DB_PORT=5432
DB_NAME=tickt
DB_USER=postgres
DB_PASSWORD=your_password


#######################################
# SECURITY / JWT
#######################################

# Secret key for JWT signing
SECRET_KEY=your_secret_key

# JWT algorithm
ALGORITHM=HS256

# Token lifetime
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7


#######################################
# EMAIL / SMTP (Verification)
#######################################

# SMTP server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Email credentials (use App Password, not real password)
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Email sender
SMTP_FROM=Tickt <your_email@gmail.com>


#######################################
# APPLICATION
#######################################

APP_NAME=Tickt
APP_VERSION=1.0
APP_DESCRIPTION=Backend service for Tickt project.
